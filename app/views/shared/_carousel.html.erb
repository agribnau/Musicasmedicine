<div id="categories" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" role="listbox">
    <% @categories.in_groups_of(3, false) do |category_group| %>
    <div class="item">
      <div class="container">
        <div class="row">
          <% category_group.each do |category| %>
          <a href="<%=category_path(category.id)%>">
            <div class="col-md-4">
              <div class="card text-center">
                <div class="card-img-top img-responsive" style="background-image: url('<%= category.photo %>')">
                  <div class="card-border">
                    <h3><%= category.name %></h3>
                    <h5><%= category.description %></h5>
                  </div>
                </div>
              </div>
            </div>
          </a>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <a class="left carousel-control" href="#categories" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#categories" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<script type="text/javascript">
  $('.carousel').find('.item').first().addClass('active')
</script>
